@if (Model.UserRole == "Admin")
{
    <h1 class="text-center text-mishmash">Welcome, Admin-@Model.Username!</h1>
}
@else
{
    <h1 class="text-center text-mishmash">Welcome, @Model.Username!</h1>
}

<h2 class="text-mishmash">Your channels</h2>
<hr class="hr-2 bg-white text-white" />
<div class="container-fluid">
    <div class="row justify-content-around">
        @foreach (var channel in Model.YourChannels)
        {
            <div class="col-md-2 bg-mishmash text-center text-white mt-4 ml-1">
                @channel.Name
                <hr class="hr-2 bg-white text-white" />
                @channel.Type Channel
                <hr class="hr-2 bg-white text-white" />
                @channel.FollowersCount Following
                <hr class="hr-2 bg-white text-white" />
                Following
            </div>
        }
    </div>
</div>

<h2 class="text-mishmash">Suggested channels</h2>
<hr class="hr-2 bg-white text-white" />
<div class="container-fluid">
    <div class="row justify-content-around">
        @foreach (var channel in Model.SuggestedChannels)
        {
            <div class="col-md-2 bg-mishmash text-center text-white mt-4 ml-1">
                @channel.Name
                <hr class="hr-2 bg-white text-white" />
                @channel.Type Channel
                <hr class="hr-2 bg-white text-white" />
                @channel.FollowersCount Following
                <hr class="hr-2 bg-white text-white" />
                <a href="/Channels/Follow?id=@channel.Id" class="text-white">Follow</a> &nbsp;
                <a href="/Channels/Details?id=@channel.Id" class="text-white">Details</a>
            </div>
        }
    </div>
</div>

<h2 class="text-mishmash">Other channels</h2>
<hr class="hr-2 bg-white text-white" />
<div class="container-fluid">
    <div class="row justify-content-around">
        @foreach (var channel in Model.SeeOther)
        {
            <div class="col-md-2 bg-mishmash text-center text-white mt-4 ml-1">
                @channel.Name
                <hr class="hr-2 bg-white text-white" />
                @channel.Type Channel
                <hr class="hr-2 bg-white text-white" />
                @channel.FollowersCount Following
                <hr class="hr-2 bg-white text-white" />
                <a href="/Channels/Follow?id=@channel.Id" class="text-white">Follow</a> &nbsp;
                <a href="/Channels/Details?id=@channel.Id" class="text-white">Details</a>
            </div>
        }
    </div>
</div>
